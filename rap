specific_read <- function(df, appName){
  if(gsub_underscore_dash(" ", "_", tolower(appName)) == "var_ifrs_17"){
    
    df_copies <- data.table()
    
    # Vérifier si All_GoC_Actuarial_AoM_Rep_Curr existe déjà
    actuarial_rep_exists <- any(grepl("all_goc_actuarial_aom_rep_curr", tolower(df$file_name)))
    
    if(actuarial_rep_exists) {
      # CAS 1: All_GoC_Actuarial_AoM_Rep_Curr existe déjà, ajouter "_2" à ses colonnes
      idx_actuarial_rep <- which(grepl("all_goc_actuarial_aom_rep_curr", tolower(df$file_name)))[1]
      
      original_data <- fread(df$tmp_path[idx_actuarial_rep])
      new_colnames <- paste0(colnames(original_data), "_2")
      colnames(original_data) <- new_colnames
      
      # Écraser le fichier existant avec les nouvelles colonnes
      fwrite(original_data, df$tmp_path[idx_actuarial_rep])
      
    } else if(any(grepl("all_goc_actuarial_aom_goc_curr", tolower(df$file_name)))) {
      # CAS 2: All_GoC_Actuarial_AoM_Rep_Curr n'existe pas, créer une copie depuis GoC_Curr
      idx_actuarial <- which(grepl("all_goc_actuarial_aom_goc_curr", tolower(df$file_name)))[1]
      
      copy_actuarial_rep <- df[idx_actuarial]
      copy_actuarial_rep$file_name <- gsub("All_GoC_Actuarial_AoM_GoC_Curr", "All_GoC_Actuarial_AoM_Rep_Curr", 
                                          copy_actuarial_rep$file_name, ignore.case = TRUE)
      
      original_data <- fread(df$tmp_path[idx_actuarial])
      
      new_colnames <- paste0(colnames(original_data), "_2")
      colnames(original_data) <- new_colnames
      
      new_tmp_path <- file.path(dirname(copy_actuarial_rep$tmp_path), 
                               paste0("All_GoC_Actuarial_AoM_Rep_Curr_", basename(copy_actuarial_rep$tmp_path)))
      fwrite(original_data, new_tmp_path)
      copy_actuarial_rep$tmp_path <- new_tmp_path
      
      df_copies <- rbind(df_copies, copy_actuarial_rep)
    }
    
    # Vérifier si All_GoC_IFRS17_AoM_PnL_Rep_Curr existe déjà
    ifrs17_rep_exists <- any(grepl("all_goc_ifrs17_aom_pnl_rep_curr", tolower(df$file_name)))
    
    if(ifrs17_rep_exists) {
      # CAS 1: All_GoC_IFRS17_AoM_PnL_Rep_Curr existe déjà, ajouter "_2" à ses colonnes
      idx_ifrs17_rep <- which(grepl("all_goc_ifrs17_aom_pnl_rep_curr", tolower(df$file_name)))[1]
      
      original_data <- fread(df$tmp_path[idx_ifrs17_rep])
      new_colnames <- paste0(colnames(original_data), "_2")
      colnames(original_data) <- new_colnames
      
      # Écraser le fichier existant avec les nouvelles colonnes
      fwrite(original_data, df$tmp_path[idx_ifrs17_rep])
      
    } else if(any(grepl("all_goc_ifrs17_aom_pnl_goc_curr", tolower(df$file_name)))) {
      # CAS 2: All_GoC_IFRS17_AoM_PnL_Rep_Curr n'existe pas, créer une copie depuis GoC_Curr
      idx_ifrs17 <- which(grepl("all_goc_ifrs17_aom_pnl_goc_curr", tolower(df$file_name)))[1]
      
      copy_ifrs17_rep <- df[idx_ifrs17]
      copy_ifrs17_rep$file_name <- gsub("All_GoC_IFRS17_AoM_PnL_GoC_Curr", "All_GoC_IFRS17_AoM_PnL_Rep_Curr", 
                                       copy_ifrs17_rep$file_name, ignore.case = TRUE)
      
      original_data <- fread(df$tmp_path[idx_ifrs17])
      
      new_colnames <- paste0(colnames(original_data), "_2")
      colnames(original_data) <- new_colnames
      
      new_tmp_path <- file.path(dirname(copy_ifrs17_rep$tmp_path), 
                               paste0("All_GoC_IFRS17_AoM_PnL_Rep_Curr_", basename(copy_ifrs17_rep$tmp_path)))
      fwrite(original_data, new_tmp_path)
      copy_ifrs17_rep$tmp_path <- new_tmp_path    
      df_copies <- rbind(df_copies, copy_ifrs17_rep)
    }
    
    if(nrow(df_copies) > 0) {
      df <- rbind(df, df_copies)
    }
  }
  
  return(df)
}
